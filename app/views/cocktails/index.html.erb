<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h1 class="my-5 text-center"> All Cocktails 🍹</h1>

      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
          <% end %>
          <li><%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %></li>

      </ul>
    </div>
  </div>
</div>
