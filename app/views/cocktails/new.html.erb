<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center my-5 new-title">Add a new cocktail</h1>

        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%=  f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>
